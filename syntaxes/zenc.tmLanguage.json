{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "zenc",
    "scopeName": "source.zenc",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#types"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.zenc",
                    "match": "\\b(if|else|while|for|return|break|continue|import|module|struct|enum|fn|var|const|let|mut|defer|asm|unsafe)\\b"
                },
                {
                    "name": "constant.language.zenc",
                    "match": "\\b(true|false|null)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.zenc",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.zenc",
                    "match": "\\\\."
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.zenc",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.zenc",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.zenc"
                        }
                    }
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.zenc",
                    "match": "\\b(int|char|bool|void|u8|u16|u32|u64|i8|i16|i32|i64|f32|f64|usize|isize|string)\\b"
                }
            ]
        }
    }
}