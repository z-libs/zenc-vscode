{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "zenc",
    "scopeName": "source.zenc",
    "patterns": [
        {
            "include": "#directives"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#attributes"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#types"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#numeric-literals"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.zenc",
                    "match": "\\b(if|else|while|for|return|break|continue|do|goto|switch|case|default|match|try|catch|guard|unless|async|await|launch|defer|asm|unsafe)\\b"
                },
                {
                    "name": "keyword.other.zenc",
                    "match": "\\b(import|module|struct|enum|union|fn|trait|impl|var|const|let|mut|def|alias|opaque|type|typedef|extern|static|volatile|autofree|comptime|embed|ref|sizeof|typeof|undefined)\\b"
                },
                {
                    "name": "constant.language.zenc",
                    "match": "\\b(true|false|null)\\b"
                },
                {
                    "name": "keyword.operator.new.zenc",
                    "match": "\\b(new|delete)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.zenc",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.zenc",
                    "match": "\\\\."
                },
                {
                    "name": "meta.interpolation.zenc",
                    "begin": "\\{",
                    "end": "\\}",
                    "patterns": [
                        {
                            "include": "$self"
                        }
                    ]
                }
            ]
        },
        "attributes": {
            "name": "meta.attribute.zenc",
            "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        },
        "directives": {
            "patterns": [
                {
                    "name": "keyword.control.directive.zenc",
                    "match": "//>\\s*[a-zA-Z0-9_]+:"
                },
                {
                    "name": "comment.line.custom.zenc",
                    "match": "//>.*$"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.zenc",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.zenc",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\(|::|<)",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.zenc"
                        }
                    }
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.zenc",
                    "match": "\\b(int|uint|char|bool|void|u8|u16|u32|u64|u128|U8|U16|U32|U64|U128|i8|i16|i32|i64|i128|I8|I16|I32|I64|I128|f32|f64|F32|F64|usize|isize|string|c_int|c_uint|c_char|c_uchar|c_short|c_ushort|c_long|c_ulong|byte|rune|va_list)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.zenc",
                    "match": "(\\+|\\-|\\*|/|%|\\^|&|\\||!|~|=|\\?|:|<|>|\\.|=>|\\.\\.|\\|\\>)"
                }
            ]
        },
        "numeric-literals": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.zenc",
                    "match": "\\b0x[0-9a-fA-F]+\\b"
                },
                {
                    "name": "constant.numeric.binary.zenc",
                    "match": "\\b0b[01]+\\b"
                },
                {
                    "name": "constant.numeric.decimal.zenc",
                    "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
                },
                {
                    "name": "string.quoted.single.zenc",
                    "match": "'(\\\\.|[^'])'"
                }
            ]
        }
    }
}